# Production Environment Configuration
# This file contains environment-specific settings for production deployments

# Environment
ENVIRONMENT=production
DEBUG=False
DJANGO_SETTINGS_MODULE=settings.production

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
ECR_REGISTRY=123456789012.dkr.ecr.us-east-1.amazonaws.com

# Project Configuration
PROJECT_NAME=django-microservices
CLUSTER_NAME=django-microservices-cluster

# Database Configuration
DB_ENGINE=postgresql
DB_NAME=django_microservices_production
DB_USERNAME=postgres
DB_PASSWORD=production_password_change_me
DB_HOST=production-db-endpoint.amazonaws.com
DB_PORT=5432

# Redis Configuration
REDIS_HOST=production-cache-endpoint.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=production_redis_password_change_me
REDIS_DB=0

# Security Configuration
SECRET_KEY=production_secret_key_change_me_to_something_very_secure
ALLOWED_HOSTS=your-production-domain.com,production-alb-dns.us-east-1.elb.amazonaws.com

# JWT Configuration
JWT_SECRET_KEY=production_jwt_secret_change_me
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=3600

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-production-frontend.com,https://admin.yourcompany.com
CORS_ALLOW_CREDENTIALS=True

# Service URLs (for inter-service communication)
USER_SERVICE_URL=http://django-microservices-user-service.local:8001
PRODUCT_SERVICE_URL=http://django-microservices-product-service.local:8002
ORDER_SERVICE_URL=http://django-microservices-order-service.local:8003
NOTIFICATION_SERVICE_URL=http://django-microservices-notification-service.local:8004

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FORMAT=json
SENTRY_DSN=https://production-sentry-dsn@sentry.io/project

# Performance Configuration
GUNICORN_WORKERS=4
GUNICORN_THREADS=8
GUNICORN_TIMEOUT=30
GUNICORN_KEEPALIVE=2

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30

# Monitoring Configuration
METRICS_ENABLED=True
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Feature Flags
FEATURE_USER_REGISTRATION=True
FEATURE_EMAIL_NOTIFICATIONS=True
FEATURE_SMS_NOTIFICATIONS=True
FEATURE_ANALYTICS=True

# Third-party Service Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.mailgun.org
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourcompany.com
EMAIL_HOST_PASSWORD=production_email_password

# S3 Configuration
S3_BUCKET_NAME=django-microservices-production
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=production_s3_access_key
S3_SECRET_ACCESS_KEY=production_s3_secret_key

# Backup Configuration
BACKUP_S3_BUCKET=django-microservices-backups-production
BACKUP_RETENTION_DAYS=30

# Cache Configuration
CACHE_TIMEOUT=600
CACHE_KEY_PREFIX=prod_
CACHE_VERSION=1

# Session Configuration
SESSION_ENGINE=django.contrib.sessions.backends.cache
SESSION_CACHE_ALIAS=default
SESSION_COOKIE_AGE=86400
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# CSRF Configuration
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Strict
CSRF_TRUSTED_ORIGINS=https://your-production-frontend.com,https://admin.yourcompany.com

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=3600

# Celery Configuration (if using async tasks)
CELERY_BROKER_URL=redis://production-cache-endpoint.amazonaws.com:6379/1
CELERY_RESULT_BACKEND=redis://production-cache-endpoint.amazonaws.com:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_THROTTLE_RATE=10000/hour

# SSL Configuration
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_REFERRER_POLICY=same-origin

# Data Protection
DATA_ENCRYPTION_KEY=production_data_encryption_key_change_me
PII_ENCRYPTION_ENABLED=True
AUDIT_LOG_ENABLED=True

# Performance Optimization
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
STATICFILES_STORAGE=whitenoise.storage.CompressedManifestStaticFilesStorage

# Database Performance
DB_CONN_MAX_AGE=300
DB_CONN_HEALTH_CHECKS=True
DB_CONN_POOL_SIZE=20
DB_CONN_POOL_OVERFLOW=10

# Cache Performance
CACHE_MIDDLEWARE_SECONDS=300
CACHE_MIDDLEWARE_KEY_PREFIX=prod_middleware_

# Third-party Integrations
STRIPE_PUBLISHABLE_KEY=pk_live_production_stripe_key
STRIPE_SECRET_KEY=sk_live_production_stripe_key
SENDGRID_API_KEY=production_sendgrid_api_key
TWILIO_ACCOUNT_SID=production_twilio_account_sid
TWILIO_AUTH_TOKEN=production_twilio_auth_token

# Compliance & Security
GDPR_COMPLIANCE_ENABLED=True
CCPA_COMPLIANCE_ENABLED=True
PCI_COMPLIANCE_ENABLED=True
SOC2_COMPLIANCE_ENABLED=True

# Monitoring & Alerting
NEWRELIC_LICENSE_KEY=production_newrelic_license_key
DATADOG_API_KEY=production_datadog_api_key
PROMETHEUS_PUSHGATEWAY_URL=https://pushgateway.yourcompany.com

# Backup & Recovery
BACKUP_SCHEDULE=0 2 * * *
BACKUP_ENCRYPTION_ENABLED=True
BACKUP_COMPRESSION_ENABLED=True
DISASTER_RECOVERY_ENABLED=True

# Load Testing
LOAD_TEST_ENABLED=False
LOAD_TEST_MAX_CONCURRENT_USERS=1000
LOAD_TEST_RAMP_UP_TIME=300

# Feature Toggles
FEATURE_BLUE_GREEN_DEPLOYMENT=True
FEATURE_CIRCUIT_BREAKER=True
FEATURE_RETRY_MECHANISM=True
FEATURE_GRACEFUL_SHUTDOWN=True 